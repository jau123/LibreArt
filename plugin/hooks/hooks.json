{
  "hooks": {
    "SessionStart": [
      {
        "matcher": "startup",
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/hooks/check-config.sh"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "mcp__meigen__generate_image",
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/hooks/open-image.sh",
            "timeout": 5
          }
        ]
      }
    ]
  }
}
